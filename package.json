{
  "name": "generator-go-micro-svc",
  "version": "0.1.0",
  "description": "Go Lang Micro Service",
  "homepage": "https://github.com/vshiva/generator-go-micro-svc",
  "author": {
    "name": "Siva",
    "email": "VShiva@gmail.com",
